<h1>Liste des blogs</h1>
<p style="color: green"><%= notice %></p>
<table>
  <tr>
    <th>TITLE</th>
    <th>CONTENT</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= link_to "Details", blog_path(blog.id) %></td>
    <td><%= link_to "Edit", edit_blog_path(blog.id) %></td>
    <td><%= link_to "Delete", blog_path(blog.id), method: :delete, data: {confirm: "Etes vous sÃ»r ?"} %></td>
  </tr>
<% end %>
</table>
